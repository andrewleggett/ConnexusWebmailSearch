{
    "name": "Connexus WebMail Recipients Search/Filter",
    "short_name": "WebMail Recipients Filter",
    "version": "2.0.0",
    "manifest_version": 3,
    "description": "Adds a case-insensitive searchbox that filters the available recipients list in WebMail.",
    "permissions": ["activeTab", "https://www.connexus.com/webmail/*"],
    "icons": {
        "16": "images/ccrCWS16.png",
        "32": "images/ccrCWS32.png",
        "48": "images/ccrCWS48.png",
        "128": "images/ccrCWS128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.connexus.com/webmail/*"],
            "js": ["addRecipientSearch.js"]
        }
    ]
}
